<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserInformationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="250sp"
                android:layout_height="300sp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_photo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20sp"
                android:gravity="top|left"
                android:orientation="vertical"
                android:paddingLeft="30sp"
                android:paddingRight="30sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lab_Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="名稱"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ed_Name"
                        app:layout_constraintEnd_toEndOf="@+id/lab_Email"
                        app:layout_constraintEnd_toStartOf="@+id/ed_Name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ed_Name" />

                    <ImageButton
                        android:id="@+id/change_Name"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_weight="1"
                        android:backgroundTint="#fff"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_pen" />

                </LinearLayout>

                <TextView
                    android:id="@+id/ed_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="載入中..."
                    android:textAlignment="viewStart" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20sp"
                android:gravity="top|left"
                android:orientation="vertical"
                android:paddingLeft="30sp"
                android:paddingRight="30sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lab_Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="信箱"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ed_Phone"
                        app:layout_constraintEnd_toEndOf="@+id/lab_Phone"
                        app:layout_constraintEnd_toStartOf="@+id/ed_Phone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ed_Phone" />

                    <ImageButton
                        android:id="@+id/change_Email"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_weight="1"
                        android:backgroundTint="#fff"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_pen" />
                </LinearLayout>

                <TextView
                    android:id="@+id/ed_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="載入中..." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20sp"
                android:gravity="top|left"
                android:orientation="vertical"
                android:paddingLeft="30sp"
                android:paddingRight="30sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lab_Phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="電話"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ed_Phone"
                        app:layout_constraintEnd_toEndOf="@+id/lab_Address"
                        app:layout_constraintEnd_toStartOf="@+id/ed_Phone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ed_Phone" />

                    <ImageButton
                        android:id="@+id/change_Phone"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_weight="1"
                        android:backgroundTint="#fff"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_pen" />
                </LinearLayout>

                <TextView
                    android:id="@+id/ed_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="載入中..." />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20sp"
                android:gravity="top|left"
                android:orientation="vertical"
                android:paddingLeft="30sp"
                android:paddingRight="30sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lab_Address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="地址"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ed_Address"
                        app:layout_constraintEnd_toStartOf="@+id/ed_Address"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ed_Address" />

                    <ImageButton
                        android:id="@+id/change_Address"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_weight="1"
                        android:backgroundTint="#fff"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_pen" />

                </LinearLayout>

                <TextView
                    android:id="@+id/ed_Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="載入中..." />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20sp"
                android:gravity="top|left"
                android:orientation="vertical"
                android:paddingLeft="30sp"
                android:paddingRight="30sp">

                <ImageView
                    android:id="@+id/mQRCodeImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    app:srcCompat="@android:drawable/ic_menu_rotate" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>